{
 "web": {
  "standalone": true,

  "https_disabled": true,
  "http_port": 8086,
  "https_port": 4433,

  "certificates": [
   {
    "domain": "{DOMAIN}",
    "private": "/etc/letsencrypt/live/{DOMAIN}/privkey.pem",
    "public": "/etc/letsencrypt/live/{DOMAIN}/cert.pem"
   }
  ],
  "socket_path": "server.sock",
  "web_paths": [
   {
    "route": "/",
    "path": "www"
   }
  ]
 },
 "database": {
  "host": "127.0.0.1",
  "port": 3306,
  "user": "username",
  "password": "password",
  "name": "yellow"
 },

 "log": {
  "level": "trace",

  "stdout": {
   "enabled": true,
   "levels": [
    {"module": "debug"},
    {"modules": "debug"},
    {"auth": "info"},
    {"webserver": "debug"},
    {"healthcheck": "warning"},
    {"*": "debug"}
   ]
  },
  "file": {
   "enabled": false,
   "name": "/var/log/yellow/server.log",
   "levels": [
    {"*": "debug"}
   ]
  },
  "database": {
   "enabled": true,
   "level": "debug"
  },
  "json": {
   "enabled": true,
   "name": "/var/log/yellow/server-json.log",
   "level": "debug"
  },
  "elasticsearch": {
   "enabled": false
  },
  "node_child_process_elasticsearch": {
   "enabled": true
  }
 },

 "session": {
  "admin": 600,
  "user": 2592000,
  "cleaner": 600
 }
}
